= form_for ['admin', @admin_section] do |f|
  - if @admin_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_section.errors.count, "error")} prohibited this admin_section from being saved:"
      %ul
        - @admin_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
